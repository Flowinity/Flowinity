{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "incremental": true,
    "types": [
      "reflect-metadata",
      "@types/mocha",
      "mocha",
      "node",
      "webpack-env",
      "@types/sequelize"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strict": false,
    "resolveJsonModule": true, // DO NOT CHANGE (I changed it :))
    "paths": {
      "@app/*": ["./app/*"]
    },
    "strictPropertyInitialization": false
  }
}
